          <div><label for="facility-large"><input type="checkbox" id="facility-large" checked> Large</label></div>
          <div><label for="facility-medium"><input type="checkbox" id="facility-medium" checked> Medium</label></div>
          <div><label for="facility-small"><input type="checkbox" id="facility-small" checked> Small</label></div>
          <div><label for="facility-community"><input type="checkbox" id="facility-community" checked> Community</label>
          </div>
        </form>
      </section>
    </div>
    <div class="col-lg-10 pr-lg-0">
      <%= yield %>
    </div>
  </div>
<% end %>
<%= render template: "layouts/application" %>