            <a class="dropdown-item" href="#">Treatment inertia</a>
            <a class="dropdown-item" href="#">Downloads</a>
          </div>
      </div>
    </div>  
      
    <!---------------------
    DESKTOP NAV
    --------------------->
    
    <div class="col-lg-2 pl-lg-0 desktop">
      <nav class="secondary-nav">
        <%= link_to 'Overview', my_facilities_overview_path, class: "nav-link" %>
        <%= link_to 'Ranked facilities', my_facilities_ranked_facilities_path, class: "nav-link current" %>
        <a class="nav-link" href="#">BP control</a>
        <a class="nav-link" href="#">Missed visit</a>
