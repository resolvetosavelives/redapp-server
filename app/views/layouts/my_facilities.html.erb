        <a class="nav-link" href="#">Treatment inertia</a>
        <a class="nav-link" href="#">Downloads</a>
      </nav>
      <section id="facility-filters" class="secondary-nav-filters">
        <h4>Facility Filters</h4>
        <div class="dropdown show">
          <a class="btn btn-sm dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            All blocks
          </a>

          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="#">All blocks</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Bathinda</a>
            <a class="dropdown-item" href="#">Bhagta</a>
            <a class="dropdown-item" href="#">Goniana</a>
            <a class="dropdown-item" href="#">Maur</a>
            <a class="dropdown-item" href="#">Nathana</a>
            <a class="dropdown-item" href="#">Phul</a>
