<html>
    <body style="background: #F0F2F5;">
        <style>
            p a {
                color:#0075EB;text-decoration: none;
            }
        </style>
        <div style="padding: 30px;">
            <div style="box-shadow: 0 2px 0 rgba(0,0,0,0.1);line-height: 1.3; background:#fff;padding:50px 20px;border-radius:7px;font-family:Arial,sans-serif; text-align: center;max-width:500px;margin:0 auto;">
                    <h1 style="letter-spacing: -0.7px; color: #333; font-family:Arial,sans-serif;font-weight:900;margin:0;font-size:26px;">
                        <%= t("devise.mailer.invitation_instructions.app").html_safe %>
                    </h1>
                    <p style="font-size:16px;">
                        <%= t("devise.mailer.invitation_instructions.someone_invited_you") %>
                    </p>
                    <p style="font-size:16px;">
                        <%= t("devise.mailer.invitation_instructions.click_button") %>
                    </p>

                    <div style="margin: 2em 0 3em 0;"><!--[if mso]>
                    <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" xmlns:w="urn:schemas-microsoft-com:office:word" href="<%= accept_invitation_url(@resource, :invitation_token => @token) %>" style="height:42px;v-text-anchor:middle;width:260px;" arcsize="12%" strokecolor="#c20020" fillcolor="#FF3355">
                        <w:anchorlock/>
                        <center style="color:#ffffff;font-family:sans-serif;font-size:15px;font-weight:bold;"><%= t("devise.mailer.invitation_instructions.accept") %></center>
                      </v:roundrect>
                    <![endif]-->
                      <a href="<%= accept_invitation_url(@resource, :invitation_token => @token) %>" style="background-color:#FF3355;border:1px solid #c20020;border-radius:5px;color:#ffffff;display:inline-block;font-family:sans-serif;font-size:16px;font-weight:bold;line-height:42px;text-align:center;text-decoration:none;width:260px;-webkit-text-size-adjust:none;mso-hide:all;">
                        <%= t("devise.mailer.invitation_instructions.accept") %>
                      </a>
                    </div>

                    <% if @resource.invitation_due_at %>
                      <p style="font-size:16px; margin-bottom:3em;"><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
                    <% end %>


                    <p style="font-size:13px;">
                        <%= t("devise.mailer.invitation_instructions.ignore").html_safe %>
                    </p>
                    <p>&nbsp;</p>
                    <div style="height:1px;background:#F0F2F5;margin:2em 0;"></div>
                    <div style="margin-bottom:0.5em; font-size: 16px;">
                      <%= t("devise.mailer.invitation_instructions.link") %>
                      <a href="<%= root_url %>"><%= root_url %></a>
                    </div>

                    <div style="margin-bottom:0.5em; font-size: 16px;">
                      <%= t("devise.mailer.invitation_instructions.username") %>
                      <a href="mailto:<%= @resource.email %>"><%= @resource.email %></a>
                    </div>
            </div>
        </div>
    </body>
</html>
