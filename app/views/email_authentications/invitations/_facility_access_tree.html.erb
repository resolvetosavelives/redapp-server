<ul class="access-item-wrapper facility <%= "collapsed" unless tree_depth.zero? %>">
  <% tree.each do |facility| %>
    <li>
      <div class="access-item facility <%= "collapsed" if root == :organization or root == :facility_group %>">
        <% tree_depth.times do %>
          <span class="spacer"></span>
        <% end %>

        <%= access_controls(
                :facilities,
                facility,
                page: page,
                checked: page.eql?(:edit) && user_being_edited.visible_facilities.include?(facility)
            ) %>

        <div class="access-item__padding"></div>
      </div>
    </li>
  <% end %>
</ul>
