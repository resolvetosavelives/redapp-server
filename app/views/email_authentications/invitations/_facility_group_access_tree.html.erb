<ul class="access-item-wrapper facility-group <%= "collapsed" unless tree_depth.zero? %>">
  <% tree.each do |facility_group, facilities| %>
    <li>
      <div class="access-item facility-group <%= "collapsed" if root == :organization or tree_depth.zero? %>">
        <% tree_depth.times do %>
          <span class="spacer"></span>
        <% end %>

        <%= access_controls(
                :facility_groups,
                facility_group,
                page: page,
                checked: page.eql?(:edit) && user_being_edited.visible_facility_groups.include?(facility_group)
            ) %>

        <div class="access-item__padding"></div>

        <span class="access-ratio">
          <%= access_facility_count(facilities.length) %>
          <i class="fas fa-caret-up light"></i>
        </span>
      </div>

      <%= render "email_authentications/invitations/facility_access_tree",
          tree: facilities,
          root: root,
          page: page,
          user_being_edited: user_being_edited,
          tree_depth: tree_depth + 1 %>
    </li>
  <% end %>
</ul>

