<div class="alert alert-primary">
  <span class="fw-bold">Early access:</span> Thanks for your patience as we improve this page. The following features are coming soon:
  <ul class="mt-4px mb-0px pl-16px">
    <li>More detailed cohorts</li>
    <li>Top district and facility benchmarks</li>
    <li>Lost to follow-up rate</li>
    <li>Facility comparison tables</li>
    <li>State and block level reports</li>
  </ul>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-5 col-lg-7">
      <% @organizations.each do |organization| %>
      <section>
        <div class="card">
          <h2><%= organization.name %></h2>
          <% if Flipper.enabled?(:new_permissions_system_aug_2020, current_admin) %>
            <% current_admin.accessible_facilities(:view_reports)
               .includes(facility_group: :organization)
               .where(facility_groups: {organization: organization})
               .flat_map(&:facility_group)
               .uniq
               .compact
               .sort_by(&:name)
               .each do |district| %>
              <%= link_to(reports_region_path(district, report_scope: "district"), class: "link-row") do %>
                <i class='fas fa-angle-right light'></i>
                <%= district.name %>
              <% end %>
            <% end %>
          <% else %>
            <% policy_scope([:cohort_report, organization.facility_groups]).order(:name).each do |district| %>
              <%= link_to(reports_region_path(district, report_scope: "district"), class: "link-row") do %>
                <i class='fas fa-angle-right light'></i>
                <%= district.name %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </section>
      <% end %>
    </div>
  </div>
</div>
