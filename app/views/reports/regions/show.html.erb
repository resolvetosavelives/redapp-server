<%= render "header" %>
<div class="d-lg-flex flex-lg-wrap">
  <div class="d-lg-flex w-lg-50 pr-lg-2">
    <div class="mt-8px mx-0px mb-16px bg-white br-4px bs-small d-lg-flex fd-lg-column justify-lg-between h-lg-full w-lg-full mt-lg-0">
      <div class="pt-20px px-20px">
        <div class="mb-16px">
          <p class="mb-0px fw-bold fs-20px c-black">
            BP controlled
          </p>
        </div>
        <div class="mb-12px d-lg-flex align-lg-center">
          <p id="bp-controlled-rate" class="mb-0px fs-32px fw-bold <% if @data[:controlled_patients_rate].values.last %>c-green-dark<% else %>c-grey-medium<% end %> mr-lg-12px">
            <% if @data.last_value(:controlled_patients_rate) %>
              <%= number_to_percentage(@data.last_value(:controlled_patients_rate), precision: 0) %>
            <% else %>
              No data
            <% end %>
          </p>
          <div>
            <% if @data.last_value(:controlled_patients_rate) %>
              <p class="m-0px c-black">
                <span id="bp-controlled-patients">
                  <%= number_with_delimiter(@data.last_value(:controlled_patients)) %>
                </span>
                patients with controlled BP between
                <span id="bp-controlled-start-date">
                  START_DATE
                </span>
                to
                <span id="bp-controlled-end-date">
                  END_DATE
                </span>
              </p>
              <p class="m-0px c-grey-dark">
                of
                <span id="bp-controlled-cumulative-registrations">
                  <%= number_with_delimiter(@data.last_value(:adjusted_registrations)) %> 
                </span>
                patients registered till
                <span id="bp-controlled-start-date">
                  START_DATE
                </span>
              </p>
            <% else %>
              <p class="m-0px c-grey-medium">
                No BP controlled data available
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <div class="p-relative mb-12px">
          <div class="h-200px mr-16px mb-12px ml-13px">
            <canvas id="controlledPatientsTrend"></canvas>
          </div>
          <div class="p-absolute t-0 l-0 pe-none d-flex align-center justify-center w-100pt h-100pt">
            <% unless @data.last_value(:controlled_patients_rate) %>
              <p class="c-grey-medium">
                No data available
              </p>
            <% end %>
          </div>
        </div>
        <div class="px-20px pb-8px pb-lg-0">
          <div class="mb-2">
            <p class="mb-8px fs-14px c-grey-dark">
              <strong>Numerator:</strong> Patients with BP &lt;140/90 at their most recent visit in the last 3 months
            </p>
            <p class="fs-14px c-grey-dark">
              <% if @region.is_a?(Facility) %>
                <strong>Denominator:</strong> All hypertensive patients assigned to <%= @region.name %> registered before the last 3 months
              <% else %>
                <strong>Denominator:</strong> All hypertensive patients registered in <%= @region.name %> before the last 3 months
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-lg-flex w-lg-50 pl-lg-2">
    <div class="mt-8px mx-0px mb-16px bg-white br-4px bs-small d-lg-flex fd-lg-column justify-lg-between h-lg-full w-lg-full mt-lg-0">
      <div class="pt-20px px-20px">
        <div class="mb-16px">
          <p class="mb-9px fw-bold fs-20px c-black">
            BP not controlled
          </p>
        </div>
        <div class="mb-12px d-lg-flex align-lg-center">
          <p id="bp-uncontrolled-rate" class="mb-0px fs-32px fw-bold <% if @data[:uncontrolled_patients_rate].values.last %>c-red<% else %>c-grey-medium<% end %> mr-lg-12px">
            <% if @data.last_value(:uncontrolled_patients_rate) %>
              <%= number_to_percentage(@data.last_value(:uncontrolled_patients_rate), precision: 0) %>
            <% else %>
              No data
            <% end %>
          </p>
          <div>
            <% if @data.last_value(:uncontrolled_patients_rate) %>
              <p class="m-0px c-black">
                <span id="bp-uncontrolled-value">
                  <%= number_with_delimiter(@data.last_value(:controlled_patients)) %>
                </span>
                patients with controlled BP between
                <span id="bp-uncontrolled-start-date">
                  START_DATE
                </span>
                to
                <span id="bp-uncontrolled-end-date">
                  END_DATE
                </span>
              </p>
              <p class="m-0px c-grey-dark">
                of
                <span id="bp-uncontrolled-cumulative-registrations">
                  <%= number_with_delimiter(@data.last_value(:adjusted_registrations)) %>
                </span>
                patients registered till
                <span id="bp-uncontrolled-start-date">
                  START_DATE 
                </span>
              </p>
            <% else %>
              <p class="m-0px c-grey-medium">
                No BP not controlled data available
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <div class="p-relative mb-16px">
          <div class="h-200px mr-16px mb-12px ml-13px">
            <canvas id="uncontrolledPatientsTrend"></canvas>
          </div>
          <div class="p-absolute t-0 l-0 pe-none d-flex align-center justify-center w-100pt h-100pt">
            <% unless @data[:uncontrolled_patients_rate].values.last %>
              <p class="c-grey-medium">
                No data available
              </p>
            <% end %>
          </div>
        </div>
        <div class="px-20px pb-8px pb-lg-0">
          <div class="mb-2">
            <p class="mb-8px fs-14px c-grey-dark">
              <strong>Numerator:</strong> Patients with BP &ge;140/90 at their most recent visit in the last 3 months
            </p>
            <p class="fs-14px c-grey-dark">
              <% if @region.is_a?(Facility) %>
                <strong>Denominator:</strong> All hypertensive patients assigned to <%= @region.name %> registered before the last 3 months
              <% else %>
                <strong>Denominator:</strong> All hypertensive patients registered in <%= @region.name %> before the last 3 months
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-lg-flex w-lg-50 pr-lg-2">
    <div class="mt-8px mx-0px mb-16px bg-white br-4px bs-small d-lg-flex fd-lg-column justify-lg-between h-lg-full w-lg-full mt-lg-0">
      <div class="pt-20px px-20px">
        <div class="mb-16px">
          <p class="mb-0px fw-bold fs-20px c-black">
            Missed visits
          </p>
        </div>
        <div class="mb-12px d-lg-flex align-lg-center">
          <p id="missed-visits-rate" class="mb-0px fs-32px fw-bold <% if @data[:missed_visits_rate].values.last %>c-blue<% else %>c-grey-medium<% end %> mr-lg-12px">
            <% if @data.last_value(:missed_visits_rate) %>
              <%= number_to_percentage(@data.last_value(:missed_visits_rate), precision: 0) %>
            <% else %>
              No data
            <% end %>
          </p>
          <div>
            <% if @data.last_value(:missed_visits_rate) %>
              <p class="m-0px c-black">
                <span id="missed-visits-patients">
                  <%= number_with_delimiter(@data.last_value(:missed_visits)) %>
                </span>
                patients with no visit between
                <span id="missed-visits-start-date">
                  START_DATE
                </span>
                to
                <span id="missed-visits-end-date">
                  END_DATE
                </span>
              </p>
              <p class="m-0px c-grey-dark">
                of
                <span id="missed-visits-cumulative-registrations">
                  <%= number_with_delimiter(@data.last_value(:adjusted_registrations)) %> 
                </span>
                patients registered till
                <span id="missed-visits-start-date">
                  START_DATE
                </span>
              </p>
            <% else %>
              <p class="m-0px c-grey-medium">
                No missed visits data available
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <div class="h-200px mr-16px mb-16px ml-13px">
          <canvas id="missedVisitsTrend"></canvas>
        </div>
        <div class="px-20px pb-8px pb-lg-0">
          <div class="mb-2">
            <p class="mb-8px fs-14px c-grey-dark">
              <strong>Numerator:</strong> Patients with no visit in >3 months
            </p>
            <p class="fs-14px c-grey-dark">
              <% if @region.is_a?(Facility) %>
                <strong>Denominator:</strong> All hypertensive patients assigned to <%= @region.name %> registered before the last 3 months
              <% else %>
                <strong>Denominator:</strong> All hypertensive patients registered in <%= @region.name %> before the last 3 months
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-lg-flex w-lg-50 pl-lg-2">
    <div class="mt-8px mx-0px mb-16px pb-4px bg-white br-4px bs-small d-lg-flex fd-lg-column justify-lg-between h-lg-full w-lg-full mt-lg-0">
      <div class="pt-20px px-20px">
        <div class="mb-16px">
          <p class="mb-0px fw-bold fs-20px c-black">
            <% if @region.is_a?(Facility) %>
              Monthly and cumulative patients
            <% else %>
              Monthly and cumulative registrations
            <% end %>
          </p>
        </div>
        <div class="mb-12px d-lg-flex align-lg-center">
          <p id="cumulative-registrations" class="mb-0px fs-32px fw-bold <% if @data.last_value(:adjusted_registrations).zero? %>c-grey-medium<% else %>c-purple<% end %> mr-lg-12px">
            <% if @data.last_value(:adjusted_registrations).zero? %>
              No data
            <% else %>
              <%= number_with_delimiter(@data.last_value(:adjusted_registrations)) %>
            <% end %>
          </p>
          <div>
            <% if @data.last_value(:adjusted_registrations) %>
              <p class="m-0px c-black">
                Patients registered till
                <span id="cumulative-registrations-end-date">
                  END_DATE
                </span>
              </p>
              <p class="m-0px c-grey-dark">
                <span id="monthly-registrations">
                  MONTHLY_REGISTRATIONS
                </span>
                new patients registered in
                <span id="monthly-registrations-date">
                  DATE
                </span>
              </p>
            <% else %>
              <p class="m-0px c-grey-medium">
                No registration data available
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="h-200px mr-13px mb-16px ml-13px pb-4px">
        <canvas id="cumulativeRegistrationsTrend"></canvas>
      </div>
      <div class="px-20px pb-8px pb-lg-0">
        <div class="d-flex">
          <div class="h-12px w-12px mr-8px b-2px bc-purple br-6px"></div>
          <p class="fs-14px lh-1 c-grey-dark">
            Cumulative registrations
          </p>
        </div>
        <div class="d-flex">
          <div class="h-12px w-12px mr-8px bg-purple-light br-2px"></div>
          <p class="fs-14px lh-1 c-grey-dark">
            Monthly registrations
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "visit_details_card" %>
<% if @region.is_a?(Facility) %>
  <% if current_admin.permissions_v2_enabled? %>
    <%= render "analytics/facilities/analytics_table",
               dashboard_analytics: @dashboard_analytics,
               period: :month,
               row_resource: current_admin.accessible_users(:view_reports).order(:full_name),
               row_resource_description: "New registrations",
               row_resource_subtitle: "Patients registered by users at #{@region.name}. Registrations include patients registered at this facility who are assigned to another facility.",
               row_resource_display_field: :full_name,
               row_resource_link: :admin_user_path %>
  <% else %>
    <%= render "analytics/facilities/analytics_table",
               dashboard_analytics: @dashboard_analytics,
               period: :month,
               row_resource: User.order(:full_name),
               row_resource_description: "New registrations",
               row_resource_subtitle: "Patients registered by users at #{@region.name}. Registrations include patients registered at this facility who are assigned to another facility.",
               row_resource_display_field: :full_name,
               row_resource_link: :admin_user_path %>
  <% end %>
<% else %>
  <%= render "facility_tables" %>
<% end %>

<div id="data-json" style="display: none;">
  <%= raw @data.to_json %>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
