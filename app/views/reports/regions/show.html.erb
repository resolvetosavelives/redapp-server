<%= render "header" %>

<% control_graph_denominator_copy = @with_ltfu ? "denominator_copy" : "denominator_excluding_ltfu_copy" %>
<% controlled_graph_no_data = @with_ltfu && !@data.last_value(:controlled_patients_with_ltfu_rate) || !@data.last_value(:controlled_patients_rate) %>
<% uncontrolled_graph_no_data = @with_ltfu && !@data.last_value(:uncontrolled_patients_with_ltfu_rate) || !@data.last_value(:uncontrolled_patients_rate) %>
<% missed_visits_graph_no_data = @with_ltfu && !@data.last_value(:missed_visits_with_ltfu_rate) || !@data.last_value(:missed_visits_rate) %>
<% cumulative_registrations_graph_no_data = @data.last_value(:cumulative_registrations).blank? %>
<% no_latest_registrations = @data.last_value(:registrations).blank? %>

<div class="d-lg-flex flex-lg-wrap">
  <div class="d-lg-flex w-lg-50 pr-lg-2">
    <div id="bp-controlled"
         data-period="<%= @period.to_s %>"
         class="mt-8px mx-0px mb-16px bg-white br-4px bs-small d-lg-flex fd-lg-column
                justify-lg-between h-lg-full w-lg-full mt-lg-0 pb-inside-avoid b-print-black w-print-16cm">
      <div class="pt-20px px-20px">
        <div class="d-flex mb-8px">
          <% if current_admin.feature_enabled?(:report_with_exclusions) %>
            <div class="d-flex flex-1">
              <h3 class="mb-0px mr-8px">
                BP controlled
              </h3>
              <%= render "definition_tooltip",
                         definitions: { "Numerator" => t("bp_controlled_copy.numerator"),
                                        "Denominator" => t(control_graph_denominator_copy, region_name: @region.name) } %>
            </div>
            <%= render "reports/regions/ltfu_toggle", enabled: @with_ltfu %>
          <% else %>
            <h3 class="mb-0px w-75">
              BP controlled
            </h3>
          <% end %>
        </div>
        <% if current_admin.feature_enabled?(:report_with_exclusions) %>
          <p class="c-grey-dark">
            <%= t("bp_controlled_copy.reports_card_subtitle") %>
          </p>
        <% end %>
        <div class="mb-12px d-lg-flex align-lg-center">
          <p class="mb-0px fs-32px fw-bold mr-lg-12px <% if controlled_graph_no_data %>c-grey-medium<% else %>c-green-dark<% end %>"
             data-rate="">
          </p>
          <div>
            <% if controlled_graph_no_data %>
              <p class="m-0px c-grey-medium c-print-black">
                dwediewjeodij o
                No BP controlled data available
              </p>
            <% else %>
              <p class="m-0px c-black">
                <span data-total-patients=""></span>
                patients with controlled BP from
                <span data-period-start=""></span>
                to
                <span data-period-end=""></span>
              </p>
              <p class="m-0px c-grey-dark c-print-black">
                of <span data-registrations=""></span>
                patients registered till
                <span data-registrations-period-end=""></span>
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <div class="p-relative mb-12px">
          <div class="h-320px mr-16px mb-12px ml-13px">
            <canvas id="controlledPatientsTrend"></canvas>
          </div>
          <div class="p-absolute t-0 l-0 pe-none d-flex align-center justify-center w-100pt h-100pt">
            <% if controlled_graph_no_data %>
              <p class="c-grey-medium">
                No data available
              </p>
            <% end %>
          </div>
        </div>
        <% unless current_admin.feature_enabled?(:report_with_exclusions) %>
          <div class="px-20px pb-8px pb-lg-0">
            <div class="mb-2">
              <p class="mb-8px fs-14px c-grey-dark c-print-black">
                <strong>Numerator:</strong> <%= t("bp_controlled_copy.numerator") %>
              </p>
              <p class="fs-14px c-grey-dark c-print-black">
                <strong>Denominator:</strong> <%= t("denominator_without_exclusions_copy", region_name: @region.name) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-lg-flex w-lg-50 pl-lg-2">
    <div id="bp-uncontrolled"
         data-period="<%= @period.to_s %>"
         class="mt-8px mx-0px mb-16px bg-white br-4px bs-small d-lg-flex fd-lg-column
          justify-lg-between h-lg-full w-lg-full mt-lg-0 pb-inside-avoid b-print-black w-print-16cm">
      <div class="pt-20px px-20px">
        <div class="d-flex mb-8px">
          <% if current_admin.feature_enabled?(:report_with_exclusions) %>
            <div class="d-flex flex-1">
              <h3 class="mb-0px mr-8px">
                BP not controlled
              </h3>
              <%= render "definition_tooltip",
                         definitions: { "Numerator" => t("bp_not_controlled_copy.numerator"),
                                        "Denominator" => t(control_graph_denominator_copy, region_name: @region.name) } %>
            </div>
            <%= render "reports/regions/ltfu_toggle", enabled: @with_ltfu %>
          <% else %>
            <h3 class="mb-0px w-75">
              BP not controlled
            </h3>
          <% end %>
        </div>
        <% if current_admin.feature_enabled?(:report_with_exclusions) %>
          <p class="c-grey-dark">
            <%= t("bp_not_controlled_copy.reports_card_subtitle") %>
          </p>
        <% end %>
        <div class="mb-12px d-lg-flex align-lg-center">
          <p class="mb-0px fs-32px fw-bold mr-lg-12px <% if uncontrolled_graph_no_data %>c-grey-medium<% else %>c-red<% end %>"
             data-rate="">
          </p>
          <div>
            <% if uncontrolled_graph_no_data %>
              <p class="m-0px c-grey-medium c-print-black">
                No BP not controlled data available
              </p>
            <% else %>
              <p class="m-0px c-black">
                <span data-total-patients=""></span>
                patients with uncontrolled BP from
                <span data-period-start=""></span>
                to
                <span data-period-end=""></span>
              </p>
              <p class="m-0px c-grey-dark c-print-black">
                of
                <span data-registrations=""></span>
                patients registered till
                <span data-registrations-period-end=""></span>
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <div class="p-relative mb-16px">
          <div class="h-320px mr-16px mb-12px ml-13px">
            <canvas id="uncontrolledPatientsTrend"></canvas>
          </div>
          <div class="p-absolute t-0 l-0 pe-none d-flex align-center justify-center w-100pt h-100pt">
            <% if uncontrolled_graph_no_data %>
              <p class="c-grey-medium">
                No data available
              </p>
            <% end %>
          </div>
        </div>
        <% unless current_admin.feature_enabled?(:report_with_exclusions) %>
          <div class="px-20px pb-8px pb-lg-0">
            <div class="mb-2">
              <p class="mb-8px fs-14px c-grey-dark c-print-black">
                <strong>Numerator:</strong> <%= t("bp_not_controlled_copy.numerator") %>
              </p>
              <p class="fs-14px c-grey-dark c-print-black">
                <strong>Denominator:</strong> <%= t("denominator_without_exclusions_copy", region_name: @region.name) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-lg-flex w-lg-50 pr-lg-2">
    <div id="missed-visits"
         data-period="<%= @period.to_s %>"
         class="mt-8px mx-0px mb-16px bg-white br-4px bs-small d-lg-flex fd-lg-column
          justify-lg-between h-lg-full w-lg-full mt-lg-0 pb-inside-avoid b-print-black w-print-16cm">
      <div class="pt-20px px-20px">
        <div class="d-flex mb-8px">
          <% if current_admin.feature_enabled?(:report_with_exclusions) %>
            <div class="d-flex flex-1">
              <h3 class="mb-0px mr-8px">
                Missed visits
              </h3>
              <%= render "definition_tooltip",
                         definitions: { "Numerator" => t("missed_visits_copy.numerator"),
                                        "Denominator" => t(control_graph_denominator_copy, region_name: @region.name) } %>
            </div>
            <%= render "reports/regions/ltfu_toggle", enabled: @with_ltfu %>
          <% else %>
            <h3 class="mb-0px w-75">
              Missed visits
            </h3>
          <% end %>
        </div>
        <% if current_admin.feature_enabled?(:report_with_exclusions) %>
          <p class="c-grey-dark">
            <%= t("missed_visits_copy.reports_card_subtitle") %>
          </p>
        <% end %>
        <div class="mb-12px d-lg-flex align-lg-center">
          <p class="mb-0px fs-32px fw-bold mr-lg-12px <% if missed_visits_graph_no_data %>c-grey-medium<% else %>c-blue<% end %>"
             data-rate="">
          </p>
          <div>
            <% if missed_visits_graph_no_data %>
              <p class="m-0px c-grey-medium c-print-black">
                No missed visits data available
              </p>
            <% else %>
              <p class="m-0px c-black">
                <span data-total-patients=""></span>
                patients with no visit from
                <span data-period-start=""></span>
                to
                <span data-period-end=""></span>
              </p>
              <p class="m-0px c-grey-dark c-print-black">
                of
                <span data-registrations=""></span>
                patients registered till
                <span data-registrations-period-end=""></span>
              </p>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <div class="h-320px mr-16px mb-16px ml-13px">
          <canvas id="missedVisitsTrend"></canvas>
        </div>
        <% unless current_admin.feature_enabled?(:report_with_exclusions) %>
          <div class="px-20px pb-8px pb-lg-0">
            <div class="mb-2">
              <p class="mb-8px fs-14px c-grey-dark c-print-black">
                <strong>Numerator:</strong> <%= t("missed_visits_copy.numerator") %>
              </p>
              <p class="fs-14px c-grey-dark c-print-black">
                <strong>Denominator:</strong> <%= t("denominator_without_exclusions_copy", region_name: @region.name) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-lg-flex w-lg-50 pl-lg-2">
    <div id="cumulative-registrations"
         data-period="<%= @period.to_s %>"
         class="mt-8px mx-0px mb-16px pb-4px bg-white br-4px bs-small d-lg-flex fd-lg-column
                justify-lg-between h-lg-full w-lg-full mt-lg-0 pb-inside-avoid b-print-black w-print-16cm">
      <div class="pt-20px px-20px">
        <div class="d-flex mb-8px">
        <% if current_admin.feature_enabled?(:report_with_exclusions) %>
          <div class="d-flex flex-1">
            <h3 class="mb-0px mr-8px">
              Registrations
            </h3>
            <%= render "definition_tooltip",
                       definitions: { "Total registered patients" => t("registered_patients_copy.total_registered_patients", region_name: @region.name),
                                      "Monthly registered patients" => t("registered_patients_copy.monthly_registered_patients", region_name: @region.name) } %>
          </div>
        <% else %>
          <h3 class="mb-0px w-75">
            Monthly and cumulative registrations
          </h3>
        <% end %>
        </div>
        <% if current_admin.feature_enabled?(:report_with_exclusions) %>
          <p class="c-grey-dark">
            <%= t("registered_patients_copy.reports_card_subtitle", region_name: @region.name) %>
          </p>
        <% end %>
        <div class="d-flex align-center mb-12px">
          <div class="flex-1 d-lg-flex align-lg-center">
            <p class="mb-0px fs-32px fw-bold mr-lg-12px <% if cumulative_registrations_graph_no_data %>c-grey-medium<% else %>c-purple<% end %>"
              data-total-patients="">
            </p>
            <div>
              <% if cumulative_registrations_graph_no_data %>
                <p class="m-0px c-grey-medium c-print-black">
                  No total registered patients<br>dwedw
                  data available
                </p>
              <% else %>
                <p class="m-0px c-black c-print-black">
                  total <%= "registration".pluralize(@data.dig(:cumulative_registrations, @period)) %><br>till
                  <span data-registrations-period-end=""></span>
                </p>
              <% end %>
            </div>
          </div>
          <div class="flex-1 d-lg-flex align-lg-center flex-lg-1">
            <p class="mb-0px fs-32px fw-bold mr-lg-12px <% if no_latest_registrations %>c-grey-medium<% else %>c-purple-medium<% end %>"
              data-monthly-registrations="">
            </p>
            <div>
              <% if no_latest_registrations %>
                <p class="m-0px c-grey-medium c-print-black">
                  No monthly registered patients<br>
                  data available
                  <span data-registrations-month-end=""></span>
                </p>
              <% else %>
                <p class="m-0px c-black c-print-black">
                  new <%= "registration".pluralize(@data.dig(:registrations, @period)) %><br>in
                  <span data-registrations-month-end=""></span>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="h-320px mr-13px mb-16px ml-13px pb-4px">
        <canvas id="cumulativeRegistrationsTrend"></canvas>
      </div>
    </div>
  </div>
</div>

<%= render "treatment_outcomes_card" %>

<% if @children_data.any? %>
  <%= render "child_data_tables", data: @children_data, region_type: @children.first.region_type %>
<% end %>

<% if current_admin.feature_enabled?(:report_with_exclusions) %>
  <%= render "overview_footnotes" %>
<% end %>

<div id="data-json" style="display: none;">
  <%= raw @data.to_json %>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>
  window.addEventListener("DOMContentLoaded", () => {
    new Reports(<%= @with_ltfu %>).listen();
  });
</script>
