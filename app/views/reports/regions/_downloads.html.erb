<div class="downloads dropdown show show order-1 mb-24px order-lg-3 mb-lg-0"">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Downloads
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <% if policy([:cohort_report, @region]).patient_list? %>
      <p>
        <%= link_to(reports_patient_list_path(@region, report_scope: params[:report_scope]), class: "dropdown-item") do %>
          <i class="far fa-file-excel mr-2"></i>
          Patient line list
        <% end %>
      </p>
      <p>
        <%= link_to(reports_patient_list_path(@region, report_scope: params[:report_scope], medication_history: true), class: "dropdown-item") do %>
          <i class="far fa-file-excel mr-2"></i>
          Patient line list (with medication history)
        <% end %>
      </p>
  <% end %>
  </div>
</div>