<%= render "shared/user_approvals" %>

<section class="table-compact" id="facility-groups">
  <div class="table-responsive">
    <table>
      <% @organizations.each do |organization| %>
        <tr>
          <th><h2 style="padding-top: 1em;"><%= organization.name %></h2></th>
        </tr>

        <% get_districts_to_facilities_map_for_organization(organization).each do |district| %>
          <tr>
            <td class="row-title">
              <%= link_to district, analytics_organization_district_path(organization.id, district, from_time: analytics_date_format(90.days.ago.yesterday),
                                                            to_time: analytics_date_format(Time.now.yesterday)) %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</section>
