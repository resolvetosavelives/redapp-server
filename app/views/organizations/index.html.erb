<%= render "shared/old_reports_banner" %>

<div class="container">
  <div class="row">
    <div class="col-sm-5 col-lg-7">
      <% @organizations.each do |organization| %>
        <section id="facility-groups">
          <div class="card" title="<%= organization.name %>">
            <h2><%= organization.name %></h2>
            <% if current_admin.permissions_v2_enabled? %>
              <% @organizations.includes(:facility_groups).flat_map(&:facility_groups).each do |district| %>
                <%= link_to(reports_region_district_path(district), class: "link-row") do %>
                  <i class='fas fa-angle-right light'></i>
                  <%= district.name %>
                <% end %>
              <% end %>
            <% else %>
              <% @organizations.includes(:facility_groups).flat_map(&:facility_groups).each do |district| %>
                <%= link_to(reports_region_district_path(district), class: "link-row") do %>
                  <i class='fas fa-angle-right light'></i>
                  <%= district.name %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </section>
      <% end %>
    </div>
    <div class="col-sm-7 col-lg-5">
      <%= render "shared/user_approvals" %>
    </div>
  </div>
</div>
