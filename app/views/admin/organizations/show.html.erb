<h1><%= @organization.name %></h1>

<div class="row">
  <div class="col-md-4 col-lg-3">
    <% if policy(@organization).edit? %>
      <%= link_to 'Edit facility', edit_admin_organization_path(@organization), class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>

  <div class="col-md-8 col-lg-9">
    <h3>Organization Facility Groups</h3>

    <% @organization.facility_groups.each do |facility_group| %>
      <div class="row border-bottom mb-4">
        <div class="col-lg-9">
          <h6><%= link_to facility_group.name, admin_organization_facility_group_path(@organization, facility_group) %></h6>
        </div>
      </div>
    <% end %>
  </div>
</div>
