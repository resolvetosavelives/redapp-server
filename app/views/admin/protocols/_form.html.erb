<div class="row">
  <div class="col-md-6">
    <%= bootstrap_form_with(model: [:admin, protocol], local: true, label_errors: true) do |form| %>
      <%= form.text_field :name, id: :protocol_name %>
      <%= form.number_field 'Follow-up days', id: :protocol_follow_up_days, help: "Default number of days displayed in the mobile app when scheduling a new patient appointment" %>
      <%= form.primary("Save medication list") %>
    <% end %>
  </div>
</div>
