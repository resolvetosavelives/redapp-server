<p id="notice"><%= notice %></p>

<h1>Protocols</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Follow up days</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @protocols.each do |protocol| %>
    <tr>
      <td><%= link_to protocol.name, [:admin, protocol] %></td>
      <td><%= protocol.follow_up_days %></td>
      <% if policy(protocol).edit? %>
        <td><%= link_to 'Edit', edit_admin_protocol_path(protocol) %></td>
      <% end %>
      <% if policy(protocol).destroy? %>
        <td><%= link_to 'Destroy', [:admin, protocol], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if policy(Protocol).new? %>
  <%= link_to 'New Protocol', new_admin_protocol_path %>
<% end %>

<% @protocols.each do |protocol| %>
  <h1>Protocol Drugs for <%= protocol.name %> </h1>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Dosage</th>
      <th>RxNorm code</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% protocol.protocol_drugs.each do |protocol_drug| %>
      <tr>
        <td><%= link_to protocol_drug.name, [:admin, protocol_drug] %></td>
        <td><%= protocol_drug.dosage %></td>
        <td><%= protocol_drug.rxnorm_code %></td>
        <% if policy(protocol_drug).edit? %>
          <td><%= link_to 'Edit', edit_admin_protocol_drug_path(protocol_drug) %></td>
        <% end %>
        <% if policy(protocol_drug).destroy? %>
          <td><%= link_to 'Destroy', [:admin, protocol_drug], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <% if policy(ProtocolDrug).new? %>
    <%= link_to 'New Protocol Drug', new_admin_protocol_drug_path %>
   <% end %>
<% end %>
