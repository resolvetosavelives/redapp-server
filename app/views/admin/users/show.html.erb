<p id="notice"><%= notice %></p>

<p class=<%= @user.access_token_valid? ? 'active' : 'inactive' %>>
  <strong>Name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @user.phone_number %>
</p>

<p>
  <strong>Facility:</strong>
  <%= link_to @user.facility.name, [:admin, @user.facility] %>
</p>

<p>
  <strong>First login in at:</strong>
  <%= @user.logged_in_at.try(:iso8601) || 'Not logged in yet' %>
</p>

<p>
  <strong>OTP message for user</strong>
  <%= I18n.t('sms.notification', otp: @user.otp) %>
</p>

<% if current_admin.owner? %>
  <%= link_to 'Edit', edit_admin_facility_user_path(@user.facility, @user) %> |
  <%= link_to 'Back', admin_facility_users_path %> |
  <%= link_to 'Reset OTP', admin_facility_user_reset_otp_path(@user.facility, @user), method: :put, data: { confirm: I18n.t('admin.reset_otp_alert') } %> |
<% end %>
<% if @user.access_token_valid? %>
  <%= link_to 'Disable Access', admin_facility_user_disable_access_path(@user.facility, @user), method: :put, data: { confirm: I18n.t('admin.disable_access_alert') } %>
<% else %>
  <%= link_to 'Enable Access', admin_facility_user_enable_access_path(@user.facility, @user), method: :put, data: { confirm: I18n.t('admin.enable_access_alert') } %>
<% end %>
