<%= form_with(model: [:admin, user], local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :full_name, "Full Name (alphabets only)" %>
    <%= form.text_field :full_name, id: :user_name, pattern: "[a-zA-Z ]+"%>
  </div>

  <div class="field">
    <%= form.label :phone_number, "Phone Number (10 digits)" %>
    <%= form.text_field :phone_number, id: :user_phone_number , pattern: '(6|7|8|9)\d{9}'%>
  </div>

  <div class="field">
    <%= form.label :password, "PIN" %>
    <%= form.password_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation , "PIN confirmation"%>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :facility_id %>
    <%= form.label :facility_id, @facility.name %>
    <%= form.text_field :facility_id, hidden: true, value: @facility.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
