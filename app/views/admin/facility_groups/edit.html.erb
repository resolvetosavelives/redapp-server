<div class="page-header">
  <h1 class="page-title">Edit facility group</h1>
  <nav class="page-nav">
    <% if Flipper.enabled?(:new_permissions_system_aug_2020, current_admin) %>
      <% if current_admin.accessible_facility_groups(:manage).find_by_id(@facility_group) %>
        <%= link_to 'Delete facility group', [:admin, @facility_group], method: :delete, data: {confirm: "Are you sure you want to delete #{@facility_group.name}?"}, class: "btn btn-outline-danger ml-4" %>
      <% end %>
    <% else %>
      <% if policy([:manage, @facility_group]).destroy? %>
        <%= link_to 'Delete facility group', [:admin, @facility_group], method: :delete, data: {confirm: "Are you sure you want to delete #{@facility_group.name}?"}, class: "btn btn-outline-danger ml-4" %>
      <% end %>
    <% end %>
  </nav>
</div>

<%= render 'form', facility_group: @facility_group, organizations: @organizations, protocols: @protocols %>
