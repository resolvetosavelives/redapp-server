<%= form_with(model: [:admin, facility], local: true, autocomplete: "off") do |form| %>
  <% if facility.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(facility.errors.count, "error") %> prohibited this facility from being saved:</h2>

      <ul>
      <% facility.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "required" %>
    <%= form.text_field :name, id: :facility_name, required: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, id: :facility_street_address %>
  </div>

  <div class="field">
    <%= form.label :village_or_colony %>
    <%= form.text_field :village_or_colony, id: :facility_village_or_colony %>
  </div>

  <div class="field">
    <%= form.label :district, class: "required" %>
    <%= form.text_field :district, id: :facility_district, required: true %>
  </div>

  <div class="field">
    <%= form.label :state, class: "required" %>
    <%= form.text_field :state, id: :facility_state, required: true %>
  </div>

  <div class="field">
    <%= form.label :country, class: "required" %>
    <%= form.text_field :country, id: :facility_country, required: true, value: "India" %>
  </div>

  <div class="field">
    <%= form.label :pin %>
    <%= form.text_field :pin, id: :facility_pin %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
