<p>
  <strong>Name:</strong>
  <%= @protocol_drug.name %>
</p>

<p>
  <strong>Dosage:</strong>
  <%= @protocol_drug.dosage %>
</p>

<p>
  <strong>RxNorm code:</strong>
  <%= @protocol_drug.rxnorm_code %>
</p>

<p>
  <strong>Protocol:</strong>
  <%= @protocol_drug.protocol %>
</p>

<% if Flipper.enabled?(:new_permissions_system_aug_2020, current_admin) %>
  <%= link_to 'Edit', edit_protocol_drug_path(@protocol_drug) %> |
<% else %>
  <% if policy([:manage, @protocol_drug]).edit? %>
    <%= link_to 'Edit', edit_protocol_drug_path(@protocol_drug) %> |
  <% end %>
<% end %>
