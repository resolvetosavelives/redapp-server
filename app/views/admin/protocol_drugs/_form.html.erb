<div>
  <%= bootstrap_form_with(model: [:admin, @protocol, @protocol_drug], local: true, label_errors: true) do |form| %>
    <%= form.text_field :name, id: :protocol_drug_name %>
    <%= form.text_field :dosage, id: :protocol_drug_dosage %>
    <%= form.text_field :rxnorm_code, id: :protocol_drug_rxnorm_code, label: "RxNorm code" %>
    <%= form.select :drug_type,
                    ProtocolDrug.drug_types.map { |k, v| [v, k] },
                    { include_blank: true },
                    required: false %>
    <%= form.select :track_stock,
                   [["Yes", true], ["No", false]],
                   required: true %>
    <%= form.primary %>
  <% end %>
</div>
