<% positive_number_color = is_increase_positive ? "c-green-dark" : "c-red-dark" %>
<% negative_number_color = is_increase_positive ? "c-red-dark" : "c-green-dark" %>
<div class="ox-scroll oy-hidden ws-nowrap d-lg-flex">
  <% @facility_sizes.each_with_index do |size, i| %>
    <div class="d-inline-block w-200px mb-24px flex-lg-1 <% if i != 0 %>pl-24px pl-lg-16px bl-1px bc-grey-light<% end %>">
      <p class="mb-4px fw-bold c-grey-dark">
        All <%= Facility.localized_facility_size(size) %>s
      </p>
      <p class="mb-4px fw-bold fs-24px">
        <%= number_to_percentage(@stats_by_size[size][@period][rate_name] || 0, precision: 0) %>
      </p>
      <p class="mb-0px fs-14px c-grey-dark">
        <% six_month_rate_change = facility_size_six_month_rate_change(@stats_by_size[size], "controlled_patients_rate") %>
        <span class="fw-bold <% if six_month_rate_change > 0 %><%= positive_number_color %><% else %><%= negative_number_color %><% end %>"><%= number_to_percentage(six_month_rate_change, precision: 0) %></span> in the last 6 months
      </p>
    </div>
  <% end %>
</div>