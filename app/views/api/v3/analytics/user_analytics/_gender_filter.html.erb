<form>
  <select class="card-dropdown <%= data_table_name %>" onchange='filterDataByGender("<%= data_table_name %>")'>
    <% if is_diabetes_enabled %>
      <option value="all"><%= t("api.analytics.user_analytics.all_hypertension_and_diabetes") %></option>
    <% end %>

    <% hypertension_option_text = is_diabetes_enabled ? "#{t('api.analytics.user_analytics.hypertension')}: "  : "" %>

    <option value="hypertension:all"><%= "#{hypertension_option_text}#{t('api.analytics.user_analytics.all')}" %></option>
    <% Patient::GENDERS.each do |gender| %>
      <option value="hypertension:<%= gender %>">
        <%= hypertension_option_text + gender.capitalize %>
      </option>
    <% end %>

    <% if is_diabetes_enabled %>
      <option value="diabetes:all"><%= "#{t('api.analytics.user_analytics.diabetes')}: #{t('api.analytics.user_analytics.all')}" %></option>
      <% Patient::GENDERS.each do |gender| %>
        <option value="diabetes:<%= gender %>">
          <%= "#{t('api.analytics.user_analytics.diabetes')}: " %> <%= gender.capitalize %>
        </option>
      <% end %>
    <% end %>
  </select>
</form>
