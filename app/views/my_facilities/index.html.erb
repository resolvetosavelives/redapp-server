<div class="row">
  <div class="col-lg-6 mb-lg-3 pr-lg-0">
    <div class="card mb-3">
      <h2>Facilities</h2>
      <p>Facilities where Simple is deployed</p>
      <section id="facilities-by-size">
        <table class="table-compact">
          <thead>
          <tr>
            <th></th>
            <th>Total</th>
            <th>Inactive*</th>
          </tr>
          </thead>
          <tbody>
          <tr class="row-total">
            <td>All</td>
            <td class="text-right"><%= @facilities.count %></td>
            <td class="text-right"><%= @facilities.count - @active_facilities.count %></td>
          </tr>
          <tr>
            <td>Large</td>
            <td class="text-right"><%= @facilities.count %></td>
            <td class="text-right"><%= @facilities.count - @active_facilities.count %></td>
          </tr>
          <tr>
            <td>Medium</td>
            <td class="text-right"><%= @facilities.count %></td>
            <td class="text-right"><%= @facilities.count - @active_facilities.count %></td>
          </tr>
          <tr>
            <td>Small</td>
            <td class="text-right"><%= @facilities.count %></td>
            <td class="text-right"><%= @facilities.count - @active_facilities.count %></td>
          </tr>
          <tr>
            <td>Community</td>
            <td class="text-right"><%= @facilities.count %></td>
            <td class="text-right"><%= @facilities.count - @active_facilities.count %></td>
          </tr>
          </tbody>
        </table>
      </section>
    </div>
    <div class="card">
      <h2>Inactive facilities</h2>
      <p>Facilities with &lt;10 patients with BPs recorded in the last 7 days</p>
      <section id="facilities-inactive">
        <table class="table-compact">
          <thead>
          <tr>
            <th></th>
            <th>Last 7 days</th>
            <th>Last 30 days</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><a href="#">CHC Bathinda</a></td>
            <td class="text-right">0</td>
            <td class="text-right">4</td>
          </tr>
          <tr>
            <td><a href="#">DH Ballianwali</a></td>
            <td class="text-right">0</td>
            <td class="text-right">4</td>
          </tr>
          <tr>
            <td><a href="#">HWC Salazar California</a></td>
            <td class="text-right">0</td>
            <td class="text-right">4</td>
          </tr>
          <tr>
            <td><a href="#">PHC Placename</a></td>
            <td class="text-right">0</td>
            <td class="text-right">4</td>
          </tr>
          <tr>
            <td><a href="#">Facility Name A</a></td>
            <td class="text-right">0</td>
            <td class="text-right">4</td>
          </tr>
          </tbody>
        </table>
      </section>
    </div>
  </div>
  <div class="col-lg-6 mb-lg-3 pr-lg-0">
    <div class="card d-flex h-100 mb-3">
      <%= render "shared/user_approvals" %>
    </div>
  </div>
</div>
