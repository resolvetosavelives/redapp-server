<div class="row">
  <div class="col-lg-12">
    <div class="card card-responsive">
      <div class="d-flex align-baseline jc-between">
        <h3>
          Registrations as % of OPD load
        </h3>
        <p class="c-grey-dark">
          Last updated: <%= @last_updated_at %>
        </p>
      </div>
      <p class="c-grey-dark">
        <strong>What to look for:</strong> High percentages are good, and 10% or higher is ideal 
      </p>
      <div class="d-flex fw-wrap mb-16px">
        <%= render "shared/size_and_zone_filters" %>
      </div>
      <% %w(large medium small community).each do |size| %>
        <% next if @facilities_by_size[size].blank? %>
        <p class="mt-20px mb-0px fw-bold">
          <%= size.capitalize %> facilities
        </p>
        <table class="mt-3 mt-lg-4 table table-compact table-responsive-md table-hover analytics-table">
          <colgroup>
            <col style="width: 12%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col class="table-divider" style="width: 5%;">
            <col style="width: 5%;">
            <col class="table-divider" style="width: 4%;">
            <col style="width: 4%;">
            <col class="table-divider" style="width: 4%;">
            <col style="width: 4%;">
            <col class="table-divider" style="width: 4%;">
            <col style="width: 4%;">
            <col class="table-divider" style="width: 4%;">
            <col style="width: 4%;">
            <col class="table-divider" style="width: 4%;">
            <col style="width: 4%;">
            <col class="table-divider" style="width: 4%;">
            <col style="width: 4%;">
          </colgroup>
          <thead>
            <tr data-sort-method="thead" class="sorts">
              <th class="row-label sort-label sort-label-small">
                Facilities
              </th>
              <th class="row-label sort-label sort-label-small" data-sort-method="number">
                Total assigned<br>patients
              </th>
              <th class="row-label sort-label sort-label-small" data-sort-method="number">
                Total registered<br>patients
              </th>
              <th class="row-label sort-label sort-label-small" colspan="2">
                6-month change
              </th>
              <% (@start_period..@period).each do |period| %>
                <th class="row-label sort-label sort-label-small" data-sort-method="number" colspan="2">
                  <%= period %>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @facilities_by_size[size].each do |facility| %>
              <% six_month_rate_change = ((@data_for_facility[facility.name]["registrations"][@period] - @data_for_facility[facility.name]["registrations"][@start_period])/facility.opd_load.to_f) * 100.0 %>
              <tr data-row="<%= facility.slug %>" data-trend-color="<% if six_month_rate_change > 0 %>green<% elsif six_month_rate_change < 0 %>red<% else %>grey<% end %>">
                <td class="type-title">
                  <%= link_to(reports_region_path(facility, report_scope: "facility")) do %>
                    <%= facility.name %>
                  <% end %>
                </td>
                <td>
                  <%= number_or_zero_with_delimiter(@data_for_facility[facility.name]["adjusted_registrations"].values.last) %>
                </td>
                <td>
                  <%= number_or_zero_with_delimiter(@data_for_facility[facility.name]["cumulative_registrations"].values.last) %>
                </td>
                <td>
                  <div class="w-80px h-20px">
                    <canvas id=<%= facility.slug %>></canvas>
                  </div>
                </td>
                <td class="fw-bold ta-center <% if six_month_rate_change > 0 %>c-green-dark<% elsif six_month_rate_change < 0 %>c-red-dark<% else %>c-grey-dark<% end %>"> 
                  <%= number_to_percentage_with_symbol(six_month_rate_change, precision: 0) %>
                </td>
                <% (@start_period..@period).each do |period| %>
                  <td>
                    <%= @data_for_facility[facility.name]["registrations"][period] %>
                  </td>
                  <td class="type-percent">
                    <% registrations_rate = @data_for_facility[facility.name]["registrations"][period] / facility.opd_load.to_f * 100.0 %>
                    <em data-rate="<%= registrations_rate %>">
                      <%= number_to_percentage(registrations_rate || 0, precision: 0) %>
                    </em>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
      <div>
        <p class="mb-8px fs-14px c-grey-dark c-print-black">
          <strong>Numerator:</strong> Monthly registrations
        </p>
        <p class="mb-0px fs-14px c-grey-dark c-print-black">
          <strong>Denominator:</strong> Estimated monthly adult OPD load
        </p>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>