<div class="row">
  <div class="col-lg-12 pr-lg-0">
    <div class="card card-responsive">
      <header>
        <div class="d-flex align-baseline jc-between">
          <h3>
            Patients registered at facilities
          </h3>
          <p class="c-grey-dark">
            Last updated: <%= @last_updated_at %>
          </p>
        </div>
        <p>
          OPD % indicates the percentage of estimated adult OPD patients that are registered. Estimated monthly OPD load is updated annually by surveillance officers.
        </p>
      </header>
      <div class="d-flex">
        <div class="dropdown show mr-8px">
          <a
            id="dropdownMenuLink"
            class="btn btn-sm btn-outline btn-secondary dropdown-toggle"
            href="#"
            role="button"
            data-toggle="dropdown"
            data-display="static"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <% if @selected_zones.size == 1 %>
              <%= @selected_zones.first.capitalize %>
            <% else %>
              All blocks
            <% end %>
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <form id="query-filters">
              <button class="dropdown-item <%= "active" unless @selected_zones.size == 1 %>" onClick="filterByZone()">
                All blocks
              </button>
              <div class="dropdown-divider"></div>
              <% @zones.each do |zone| %>
                <button class="dropdown-item query-filter-zone <%= "active" if @selected_zones.size == 1 && @selected_zones.first == zone %>" onClick="filterByZone('<%= zone %>')">
                  <%= zone.capitalize %>
                </button>
              <% end %>
            </form>
          </div>
        </div>
        <div class="dropdown show mr-8px">
          <a
            id="dropdownMenuLink"
            class="btn btn-sm btn-outline btn-secondary dropdown-toggle"
            href="#"
            role="button"
            data-toggle="dropdown"
            data-display="static"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <% if @selected_sizes.size == 1 %>
              <%= @selected_sizes.first.capitalize %>
            <% else %>
              All facility sizes 
            <% end %>
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <button class="dropdown-item <%= "active" unless @selected_sizes.size == 1 %>" onClick="filterBySize()">
              All facility sizes
            </button>
            <div class="dropdown-divider"></div>
            <% @facility_sizes.each do |size| %>
              <button class="dropdown-item query-filter-size <%= "active" if @selected_sizes.size == 1 && @selected_sizes.first == size %>" onClick="filterBySize('<%= size %>')">
                <%= size.capitalize %>
              </button>
            <% end %>
          </div>
        </div>
        <div class="dropdown show">
          <a class="btn btn-sm btn-outline btn-secondary dropdown-toggle" href="#"
              role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= PeriodSelection::PERIODS[:registrations][@selected_period] %>
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <% PeriodSelection::PERIODS[:registrations].each do |period, period_name| %>
              <button type="submit" name="period" value=<%= period %> class="dropdown-item" form="query-filters"><%= period_name %></button>
            <% end %>
          </div>
        </div>
        <input class="selected-zone" name="zone" value="<%= @selected_zones.size == 1 ? @selected_zones.first : "" %>" form="query-filters" hidden>
        <input class="selected-size" name="size" value="<%= @selected_sizes.size == 1 ? @selected_sizes.first : "" %>" form="query-filters" hidden>
      </div>
      <table class="mt-3 mt-lg-4 table table-compact table-responsive-md table-hover analytics-table">
        <colgroup>
          <col>
          <% @display_periods.each do %>
            <col class="table-divider">
            <% unless @selected_period == :day %>
              <col>
            <% end %>
          <% end %>
          <col class="table-divider">
          <col class="mobile">
        </colgroup>
        <thead>
        <tr>
          <% case @selected_period %>
          <% when :quarter %>
            <th></th>
            <% @display_periods.reverse.each do |(year, quarter)| %>
              <th colspan="2">
                <%= "Q#{quarter}-#{year}" %>
              </th>
            <% end %>
            <th>Total</th>
          <% when :month %>
            <th></th>
            <% @display_periods.reverse.each do |(year, month)| %>
              <th colspan="2">
                <%= month_short_name_and_year(month_start(year, month)) %>
              </th>
            <% end %>
            <th>Total</th>
          <% end %>
        </tr>
        <tr data-sort-method="thead" class="sorts">
          <th class="row-label sort-label">Facilities</th>
          <% @display_periods.reverse.each do |period| %>
            <th <% unless @selected_period == :day %>colspan="2"<% end %>
                class="row-label sort-label"
                data-sort-column-key="<%= period.join %>"
                data-sort-method="number"
                data-sort-default>
              <% unless @selected_period == :day %>
                <div class="float-left">% of OPD</div>
              <% end %>
              <div class="float-right"><%= @selected_period == :day ? doy_to_date_str(*period) : "Registered" %></div>
            </th>
          <% end %>
          <th class="row-label sort-label" data-sort-column-key="all-time"><% if @selected_period == :day %>Total<br> <% end %> Registered patients </th>
          <th class="mobile">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        </tr>
        </thead>

        <tbody>
        <tr class="row-total" data-sort-method="none">
          <td class="type-title">All</td>
          <% @display_periods.reverse.each do |period| %>
            <td class="type-number" <% unless @selected_period == :day %>colspan="2"<% end %>><%= @total_registrations_by_period[period].to_i %></td>
          <% end %>
          <td class="type-number"><%= @total_registrations.values.sum %></td>
        </tr>
        <% @facilities.each do |facility| %>
          <tr>
            <td class="type-title"><%= link_to facility.name, reports_region_path(facility, report_scope: "facility") %></td>
            <% @display_periods.reverse.each do |period| %>
              <% unless @selected_period == :day %>
                <td class="type-percent" data-sort-column-key="<%= period.join %>">
                  <em><%= percentage(@registrations[[facility.id, period.first.to_s, period.second.to_s]], opd_load(facility, @selected_period)) %></em>
                </td>
              <% end %>
              <td class="type-number" <% if @selected_period == :day %>data-sort-column-key="<%= period.join %>"<% end %>>
                <%= @registrations[[facility.id, period.first.to_s, period.second.to_s]].to_i %>
              </td>
            <% end %>
            <td class="type-number" data-sort-column-key="all-time">
              <%= @total_registrations[facility.id].to_i %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <script>
    const $filtersForm = document.getElementById("query-filters");

    function filterBySize(size) {
      const $selectedSize = document.getElementsByClassName("selected-size")[0];
      $selectedSize.setAttribute("value", size == undefined ? "" : size);
      $filtersForm.submit();
    }

    function filterByZone(zone) {
      const $selectedZone = document.getElementsByClassName("selected-zone")[0];
      $selectedZone.setAttribute("value", zone == undefined ? "" : zone);
      $filtersForm.submit();
    }
  </script>
</div>
